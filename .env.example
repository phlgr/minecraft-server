# Docker Compose environment variables for Minecraft Server
# Copy this file to .env and customize as needed

# Server Configuration
MINECRAFT_TYPE=PURPUR
MINECRAFT_VERSION=LATEST
MINECRAFT_PORT=25565

# Memory Configuration
MINECRAFT_MEMORY=2G

# Java Options
MINECRAFT_JVM_OPTS=-XX:+UseG1GC -XX:+ParallelRefProcEnabled -XX:MaxGCPauseMillis=200

# RCON Configuration
MINECRAFT_RCON_PORT=25575
MINECRAFT_RCON_PASSWORD=minecraft

# Plugin Management (Auto-Download)
# Add plugin download URLs (separate multiple with |)
MINECRAFT_PLUGINS=""

# Remove old plugins on startup (recommended when using auto-download)
MINECRAFT_REMOVE_OLD_PLUGINS=true
