# Docker Compose environment variables for Minecraft Server
# Copy this file to .env and customize as needed

# Server Configuration
MINECRAFT_TYPE=PURPUR
MINECRAFT_VERSION=LATEST
MINECRAFT_PORT=25565

# Server Settings
MINECRAFT_DIFFICULTY=hard
MINECRAFT_GAMEMODE=survival
MINECRAFT_MAX_PLAYERS=20
MINECRAFT_MOTD=A Minecraft Server
MINECRAFT_WHITELIST=false
MINECRAFT_ENFORCE_WHITELIST=false
MINECRAFT_VIEW_DISTANCE=10
MINECRAFT_SIMULATION_DISTANCE=10

# Memory Configuration
MINECRAFT_MEMORY=2G

# Java Options
MINECRAFT_JVM_OPTS=-XX:+UseG1GC -XX:+ParallelRefProcEnabled -XX:MaxGCPauseMillis=200
