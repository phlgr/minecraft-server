# Docker Compose environment variables for Minecraft Server
# Copy this file to .env and customize as needed

# Server Configuration
MINECRAFT_TYPE=PAPER
MINECRAFT_VERSION=LATEST
MINECRAFT_PORT=25565

# Memory Configuration
MINECRAFT_MEMORY=2G

# Java Options
MINECRAFT_JVM_OPTS=-XX:+UseG1GC -XX:+ParallelRefProcEnabled -XX:MaxGCPauseMillis=200

# Plugin Management (Auto-Download)
# Add plugin download URLs (separate multiple with ,)
# AntiPopup, Chunky, CoreProtect, SimpleVoiceChat
MINECRAFT_PLUGINS="https://hangarcdn.papermc.io/plugins/pop4959/Chunky/versions/1.4.40/PAPER/Chunky-Bukkit-1.4.40.jar,https://www.patreon.com/file?h=145853143&m=580728422,https://hangarcdn.papermc.io/plugins/henkelmax/SimpleVoiceChat/versions/bukkit-2.6.7/PAPER/voicechat-bukkit-2.6.7.jar"

# Remove old plugins on startup (recommended when using auto-download)
MINECRAFT_REMOVE_OLD_MODS=true
